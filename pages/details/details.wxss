/* pages/detials/detials.wxss */
.main{
    padding: 10rpx;
    color: #666;
}
/*视频*/
.video_info{
    margin-top: 10rpx;
}
.video_info video{
    width: 100%;
}
.video_title{
display: flex;
justify-content:space-between;
font-size: 35rpx;
}
.video_detail{
margin-top: 5rpx;
font-size: 28rpx;
}
.video_detail text{
    margin-left: 15rpx;
}
.video_detail .author{
color: #000;
}
.vide_playCount{
font-size: 28rpx;
}
/*推荐视频*/
.other_list{
    margin-top: 10rpx;
}

.item_other{
display: flex;
justify-content: space-between;
align-items: center;
margin-bottom: 10rpx;
}
.other_img_wrap{
    width: 30%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.other_img_wrap image{
    width: 90%;
    border-radius: 15rpx;

}
.other_info{
    margin-left: 20rpx;
    width: 60%;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
}
.other_title{
    font-size: 30rpx;
    color: hotpink;
}
.other_detail{
    font-size: 25rpx;
    color: #666;
}
